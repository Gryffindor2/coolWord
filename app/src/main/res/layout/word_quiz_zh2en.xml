<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wordQuizLayoutZhToEn">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="n. 样本，样品\nv. 采样"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textColor="#2D2D2D"
            android:paddingBottom="12pt"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="在此填写答案"
            android:paddingBottom="30pt">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="150pt"
                android:layout_height="25pt"
                android:layout_gravity="center"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nextFloatingActionButton"

            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_gravity="center"
            android:tint="@color/white"
            android:clickable="true"
            app:fabCustomSize="35pt"
            app:backgroundTint="#5600D0"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_confirm" />
        <TextView
            android:layout_marginTop="5pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#C3C3C3"
            android:text="查看答案"
            android:textAlignment="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>